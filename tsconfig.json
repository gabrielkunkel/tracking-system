{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "rootDir": "./",
      "outDir": "./build",
      "esModuleInterop": true,
      "strict": true,
      "lib": ["es6"],
      "types": ["reflect-metadata"],
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "exclude": ["node_modules", "frontend", "public"]
  }